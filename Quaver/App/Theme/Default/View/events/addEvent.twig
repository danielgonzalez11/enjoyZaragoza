{% extends "general/layout.twig" %}

{% block head %}
	{{ parent() }}
<link rel="stylesheet" href="{{qv.css}}/bootstrap-datetimepicker.min.css" />	
<script type="text/javascript" src="{{ qv.js }}/moment-with-locales.js"></script>	
<script type="text/javascript" src="{{ qv.js }}/bootstrap-datetimepicker.min.js"></script>

	
{% endblock %}

{% block body %}
<div class="container">	
	<h1>Crear evento</h1>
	<div class="add-event-form">
		<form action method="post" class="form-horizontal">
			<div class="form-group">
				<label for="eventName" class="col-md-2 control-label">Nombre:</label>
				<div class="col-md-10">
	           	<input type="text" class="form-control" id="eventName" name="eventName" minlength="2" maxlength="60" required placeholder="Nombre del evento">
	           </div>
	        </div>
	        <div class="form-group">
	        	<label for="category" class="col-md-2 control-label">Categoría:</label>
				<div class="col-md-10">
		        <select class="form-control" name="category" id="category" required>
		        {% for c in category %}
		        	<option value="{{ c.id  }}">{{ c.category }}</option>
		        {% endfor %}
				</select>
				</div>
			</div>	
			<div class="form-group">
				<label for="image" class="col-md-2 control-label">Imagen del evento:</label>
				<div class="col-md-10">
				<input data-label="Upload" name="image" class="form-control" type="file" accept="image/*" required>
				</div>
	        </div>
			<div class="form-group">
				<label for="datetimepicker" class="col-md-2 control-label">Fecha y Hora:</label>
				<div class="col-md-10">				
		            <div class='input-group date' id='datetimepicker'>
		            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
	                <input type='text' name="date" class="form-control"/>
	            	</div>
	            </div>	
			</div>
	        <div class="form-group">
	        	<label for="description" class="col-md-2 control-label">Descripción:</label>
				<div class="col-md-10">
            		<textarea rows="4" maxlength="255" id="description" name="description" class="form-control" placeholder="Escribe la descripción del evento aquí..."></textarea>
            	</div>
        	</div>
			<div class="form-group">
	        	<label for="eventPhone" class="col-md-2 control-label">Contacto:</label>
				<div class="col-md-10">				
	           	<input type="text" class="form-control" id="eventPhone" name="eventPhone" minlength="9" maxlength="9" required placeholder="Tu teléfono de contacto.....">
	           </div>
	        </div>        	
			<div class="form-group">
	        	<label for="eventPrice" class="col-md-2 control-label">Precio:</label>
				<div class="col-md-10">
					<div class="radio-inline">
					  <label>
					    <input type="radio" name="price" id="free" value="free">
					    Grátis
					  </label>
					</div>
					<div class="radio-inline">
					  <label>
					    <input type="radio" name="price" id="cost" value="cost">
					    Con aportación
					  </label>
					</div>	
				</div>

				<div  id="checkFree">
					<label for="eventDetails" class="col-md-2 control-label"></label>
					<div class="col-md-10">
		           	<input type="text" class="form-control"  name="eventPrice"  maxlength="45"  placeholder="tanto dinero...">
		           </div>
	           </div>
	        </div>
			<div class="form-group">
	        	<label for="eventCapacity" class="col-md-2 control-label">Aforo:</label>
	        	<div class="col-md-10">
					<div class="radio-inline">
					  <label>
					    <input type="radio" name="capacity" id="limited" value="limited">
					    Limitado
					  </label>
					</div>
					<div class="radio-inline">
					  <label>
					    <input type="radio" name="capacity" id="unlimited" value="unlimited">
					    Ilimitado
					  </label>
					</div>
				</div>		
				<div id="checkCapacity">
					<label for="eventCapacity" class="col-md-2 control-label"></label>	
					<div class="col-md-10" >			
		           	<input type="text" class="form-control"  name="eventCapacity" maxlength="11"  placeholder="tanto número de personas...">
		           </div>
	       		</div>
	        </div>
			<div class="form-group">
	        	<label for="eventDetails" class="col-md-2 control-label">Detalles:</label>
				<div class="col-md-10">				
	           	<input type="text" class="form-control"  name="eventDetails" maxlength="300" required placeholder="Detalles a tener en cuenta...como +18, llevar..tal">
	           </div>
	        </div>	    
			<div class="form-group">
				<label for="eventDetails" class="col-md-2 control-label"></label>
				<div class="col-md-10">
	        	<button type="submit" name="crear" class="btn btn-orange-brown form-control">Crear</button>
	        	</div>
	        </div>	            	                					
		</form>
	</div>	
</div>
{% endblock %}
{% block scripts %}
	{{ parent() }}
<script src="{{ qv.js }}/jquery.filepicker.js"></script>
<script type="text/javascript" src="{{ qv.js }}/bootstrap-datetimepicker.min.js"></script>
<script>
	$(function () {
		$("input[type='file']").filepicker({
			style: 'bootstrap' 
		});
	});	
</script>
<script type="text/javascript">
    $(function () {
        $('#datetimepicker').datetimepicker({
                	language: 'es'
        });
    });
</script>
<script>
	$('#free').click(function(){
		$('#checkFree').hide();	
	});
	$('#cost').click(function(){
		$('#checkFree').show();	
	});
	$('#limited').click(function(){
		$('#checkCapacity').show();
	});	
	$('#unlimited').click(function(){
		$('#checkCapacity').hide();
	});	

</script>
{% endblock %}

