<div id="carousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    {% for i,item in sliderItems %}
      <li data-target="#carousel" data-slide-to="{{i}}" class="{% if i == 0 %}active{% endif %}"></li>
    {% endfor %}
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    {% for item in sliderItems %}
      <div class="item {% if item.position == 1 %}active{% endif %}">
        <img src="/files/1400/500/1/files/slider/{{ item.image }}" alt="{{ item.title }}">
        <div class="carousel-caption">
          <div class="caption-wrap">
              <h1>{{ item.title }}</h1>
              {{ item.text | replace({'<a href="': '<a class="btn btn-white" href="'}) | raw }}
          </div>
        </div>
      </div>
    {% endfor %}

  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>