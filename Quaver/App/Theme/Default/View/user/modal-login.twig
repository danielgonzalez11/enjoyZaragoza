<!-- Modal -->
<div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{{ ('modal-label-logSignin')|t }}</h4>
      </div>
      <div class="modal-body">
        
          <div class="row">
              <div class="col-md-6 col-xs-6">
              {# <h2>Inicia sesi√≥n</h2> #}
              <label class="label-no-margin">{{ ('modal-label-login')|t }}</label>
              <form class="login-form" action="/login/" method="post"> 
                <input type="hidden" name="ref" value="">
                <div class="form-group">
                  <input type="email" class="form-control" id="" name="email" maxlength="255" required placeholder="{{ ('modal-label-email-placeholder')|t }}">
                </div>
                <div class="form-group">
                  <input type="password" class="form-control" id="" name="password" required placeholder="{{ ('modal-label-pass-placeholder')|t }}">
                </div>
                <div class="checkbox">
                </div>
                <p><button type="submit" class="btn btn-orange">{{ ('modal-label-login-button')|t }}</button></p>
                <p><a href="/recovery" class="fc-orange">{{ ('modal-label-login-button-forget')|t }}</a></p>
              </form>
            </div>

            <div class="col-md-6 col-xs-6" style="border-left:1px dashed #000;">
            <label class="label-no-margin">{{ ('modal-label-signin')|t }}
            <a href="#" target="" data-toggle="tooltip" data-placement="top" title="{{ ('modal-label-tooltip')|t }}"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a></label>
              <form class="register-form" action="/register/" method="post">
                {# <h2>Crea tu cuenta</h2> #}
                <input type="hidden" name="ref" value="">
                <div class="form-group">
                 <input type="text" class="form-control" id="" name="name" minlength="2" maxlength="60" required placeholder="{{ ('modal-label-name-placeholder')|t }}">   
                </div>
                <div class="form-group">   
                  <input type="email" class="form-control" id="" name="email" maxlength="255" required placeholder="{{ ('modal-label-email-placeholder')|t }}">
                 </div>
                <div class="form-group">  
                 <input type="password" class="form-control" id="" name="password" required placeholder="{{ ('modal-label-pass-placeholder')|t }}">
                 </div>
                <div class="checkbox">
                  <label>
                    <input type="checkbox" name="check-auth" value="1" required> 
                     <a href="/terms" target="_blank">{{ ('modal-label-terms')|t }}</a>
                  </label>
                </div>
                <button type="submit" class="btn btn-orange">{{ ('modal-label-create-account')|t }}</button>
              </form>
            </div>
        </div>
      <div class="row">
        <div class="col-md-12 text-center">
          <a href="/{#auth/facebook/?ref={{ ref | url_encode | e('html_attr') }}#}" class="btn btn-facebook">Facebook</a>
          <label class="label-modal-info">{{ ('modal-label-info')|t }}</label>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

